<resources>
    <!--标题-->
    <style name="MainTextView">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/dimen_18</item>
    </style>
    <!--正文，内容-->
    <style name="SecTextView">
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/dimen_16</item>
    </style>
    <!--提示-->
    <style name="ThirdTextView">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dimen_14</item>
    </style>

    <style name="MyButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_btn</item>
    </style>

    <style name="ToolbarCustomStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
