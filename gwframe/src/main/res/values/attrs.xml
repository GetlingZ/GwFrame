<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CleanableEditText">
        <attr name="cleanableHint" format="string" />
    </declare-styleable>

    <declare-styleable name="ScanView">
        <attr name="scanHint" format="string" />
        <attr name="scan_button_bg" format="reference" />
        <attr name="scan_content_bg" format="reference" />
        <attr name="scan_content_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SettingItemView">
        <attr name="settingTitle" format="string" />
        <attr name="settingContent" format="string" />
        <attr name="settingContentColor" format="color" />
        <attr name="settingTitleColor" format="color" />
        <attr name="settingTitleSize" format="integer" />
        <attr name="settingContentSize" format="integer" />
        <attr name="settingTextSize" format="integer" />
        <attr name="titleGravity" />
        <attr name="showInputDialog" />
        <attr name="myTypeValue" />
    </declare-styleable>

    <declare-styleable name="FormView">
        <attr name="formTitle" format="string" />
        <attr name="formContent" format="string" />
        <attr name="formContentColor" format="color" />
        <attr name="formTitleColor" format="color" />
        <attr name="formTitleSize" format="integer" />
        <attr name="formContentSize" format="integer" />
        <attr name="formTextSize" format="integer" />
        <attr name="edit_enable" format="boolean" />
        <attr name="titleGravity" />
        <attr name="showInputDialog" />
        <attr name="formBackground">
            <flag name="white" value="1" />
            <flag name="transparent" value="2" />
        </attr>
        <attr name="drawable_src" />
        <attr name="drawable_height" />
        <attr name="drawable_width" />
        <attr name="drawable_location" />
        <attr name="myTypeValue" />
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="drawable_src" />
        <attr name="drawable_height" />
        <attr name="drawable_width" />
        <attr name="drawable_location" />
    </declare-styleable>

    <declare-styleable name="DrawableEditText">
        <attr name="drawable_src" />
        <attr name="drawable_height" />
        <attr name="drawable_width" />
        <attr name="drawable_location" />
    </declare-styleable>

    <attr name="drawable_src" format="reference" />
    <attr name="drawable_height" format="dimension" />
    <attr name="drawable_width" format="dimension" />

    <attr name="drawable_location">
        <enum name="left" value="1" />
        <enum name="top" value="2" />
        <enum name="right" value="3" />
        <enum name="bottom" value="4" />
    </attr>

    <attr name="titleGravity">
        <flag name="start" value="1" />
        <flag name="end" value="2" />
        <flag name="center" value="3" />
    </attr>

    <attr name="showInputDialog">
        <flag name="text" value="1" />
        <flag name="num" value="2" />
    </attr>
    <attr name="myTypeValue">
        <flag name="px" value="0" />
        <flag name="dp" value="1" />
        <flag name="sp" value="2" />
        <flag name="pt" value="3" />
    </attr>
</resources>